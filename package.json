{
  "name": "street-jewls-website",
  "version": "1.0.0",
  "description": "Street Jewls JDM e-commerce website templates",
  "private": true,
  "scripts": {
    "dev": "serve -s . -l 3000",
    "build": "node scripts/build.js",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint:fix": "npm run lint:css -- --fix && npm run lint:js -- --fix",
    "validate:html": "html-validate \"pages/**/*.html\"",
    "test": "echo \"No tests configured yet\" && exit 0",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "html-validate": "^8.18.0",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "jdm",
    "car-parts",
    "ecommerce",
    "street-jewls"
  ],
  "author": "Street Jewls",
  "license": "UNLICENSED"
}
